{
  "name": "server",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "prebuild": "yarn lint",
    "build": "tsc",
    "prestart": "yarn build",
    "start": "node dist/index.js",
    "start:dev": "nodemon -e ts --exec \"tsc && node dist/index.js\"",
    "test": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix"
  },
  "main": "dist/index.js",
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/node": "^17.0.39",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/parser": "^5.27.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "pg": "^8.7.3",
    "pg-promise": "^10.11.1",
    "prisma": "^3.14.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "eslint": "^8.17.0",
    "dotenv": "^16.0.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.16",
    "jest": "^28.1.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./src"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
